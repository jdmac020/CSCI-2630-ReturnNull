@model EDeviceClaims.WebUi.Models.ClaimViewModel

<h2>View Claim</h2>

<div>
    <table class="table" id="claimDetailsTable">
        <tr>
            <th>@Html.Label("Claim ID")</th>
        </tr>
        <tr></tr>
        <tr>@Model.Status</tr>
        <tr>@Model.Id</tr>
        <tr>@Model.DeviceName</tr>
        <tr>@Model.PolicyNumber</tr>
        <tr>@Model.SerialNumber</tr>
    </table>
    <div>
        <h4>Notes:</h4>
        @foreach (var note in Model.Notes)
        {
            <div>
                <span>@note.Content</span>
                <span>@note.WhenCreated.GetValueOrDefault()</span>
                <span>@note.CreatedBy</span>
            </div>
        }
    </div>
</div>